{
	"name": "@bhsd/lezer-abusefilter",
	"version": "0.0.0",
	"description": "Lezer parser for MediaWiki extension AbuseFilter",
	"keywords": [
		"mediawiki",
		"lezer"
	],
	"homepage": "https://github.com/bhsd-harry/lezer-abusefilter#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/lezer-abusefilter/issues"
	},
	"license": "GPL-3.0",
	"files": [
		"dist/",
		"!dist/*.test.*",
		"!dist/gh-page.*"
	],
	"browser": "dist/index.js",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/lezer-abusefilter.git"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"build:parser": "lezer-generator src/abusefilter.grammar -o src/parser.js",
		"build:core": "tsc && cp src/parser.*js dist/",
		"build:gh-page": "esbuild src/gh-page.ts --charset=utf8 --target=es2019 --bundle --format=esm --minify --outdir=.",
		"build:test": "rm -rf test/dist/; tsc --project test/tsconfig.json && npm test",
		"build": "npm run build:parser && npm run build:core",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint:md": "markdownlint-cli2 '**/*.md'",
		"lint": "npm run lint:ts && npm run lint:md",
		"server": "npm run test:end; http-server .. -c-1 --cors -s &",
		"test": "mocha",
		"test:end": "pkill -x http-server"
	},
	"dependencies": {
		"@codemirror/language": "^6.12.1"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.3.2",
		"@codemirror/autocomplete": "^6.20.0",
		"@codemirror/commands": "^6.10.1",
		"@codemirror/search": "^6.5.11",
		"@codemirror/view": "^6.38.8",
		"@lezer/generator": "^1.8.0",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@types/mocha": "^10.0.10",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"eslint": "^9.39.1",
		"eslint-plugin-es-x": "^9.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^61.2.1",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"http-server": "^14.1.1",
		"markdownlint-cli2": "^0.19.0",
		"mocha": "^11.7.5",
		"typescript": "^5.9.3"
	}
}
